# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Database Configuration (Mock)
DATABASE_URL=mock://localhost/tryon_db
SESSION_SECRET=session-secret-key-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# File Upload Configuration
MAX_FILE_SIZE=52428800
MAX_FILES=10
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.glb,.gltf,.fbx,.obj,.mtl

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# External API Keys (Mock)
RAZORPAY_KEY_ID=rzp_test_mock_key
RAZORPAY_KEY_SECRET=mock_secret_key
GOOGLE_CLOUD_STORAGE_BUCKET=tryon-assets-dev

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080,http://localhost:19006
CORS_CREDENTIALS=true

# Mock Data Configuration
ENABLE_MOCK_AUTH=true
ENABLE_MOCK_PAYMENTS=true
ENABLE_MOCK_3D_PROCESSING=true

# Cache Configuration
CACHE_TTL=3600
ENABLE_COMPRESSION=true

# Health Check Configuration
HEALTH_CHECK_ENABLED=true